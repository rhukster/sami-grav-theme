{% extends "layout/base.twig" %}
{% from "macros.twig" import class_link, namespace_link, method_link, property_link %}

{% block title %}
{% set title = "API Index" %}
{{ parent() }}
{% endblock %}

{% block content %}

{% for letter in 'A'..'Z' %}
* [{{ letter }}](#letter{{ letter }})
{% endfor %}


{% for letter, elements in items %}
## {{ letter }}     {.letter #letter{{ letter }} }

{% for element in elements %}
{% set type = element[0] %}
{% set value = element[1] %}
{% if 'class' == type %}
{{ class_link(value) }}{% if has_namespaces %} &mdash; _Class in namespace {{ namespace_link(value.namespace) }}{% endif %}_
:   {{ value.shortdesc|desc(value) }}

{% elseif 'method' == type %}
{{ method_link(value) }}() &mdash; _Method in class {{ class_link(value.class) }}_
:   {{ value.shortdesc|desc(value.class) }}

{% elseif 'property' == type %}
${{ property_link(value) }} &mdash; _Property in class {{ class_link(value.class) }}_
:   {{ value.shortdesc|desc(value.class) }}

{% endif %}
{% endfor %}

{% endfor %}

{% endblock %}
